@page
@model LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/64d58efce2.js"
            crossorigin="anonymous"></script>

    <!--fontawesome link -->
    <script src="https://kit.fontawesome.com/70ea18d072.js" crossorigin="anonymous"></script>
    <link href="~/css/CustomerCssFiles/csign.css" rel="stylesheet" />
    <link rel="shortcut icon " type="image/png" href="/image/Logo.png">

    <title>Login - Kitabi</title>
</head>
<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                <form method="post" class="sign-in-form">

                    <h2 class="title">Sign in</h2>
                    <div asp-validation-summary="All" style="color:red"></div>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" placeholder="Username" asp-for="Input.Email"/>
                    </div>

                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" placeholder="Password" asp-for="Input.Password"/>
                    </div>


                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" >
                        <label class="form-check-label" for="flexCheckChecked" asp-for="Input.RememberMe">
                            Remember Me
                        </label>
                    </div>

                    <input type="submit" value="Login" class="btn solid" />

                    <p class="social-text">Or Sign in with social platforms</p>
                    <div class="social-media">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-google"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>New here ?</h3>
                    <p>
                        In the event that you are not a member yet on our website, you can join us now,
                        click on sign up button and enter your data to enjoy our services.
                    </p>

                    <a href="/Account/Register/customer" class="btn transparent" id="sign-up-btn">Sign up</a>
                </div>
                <img src="image/log.svg" class="image" alt="" />
            </div>
        </div>
    </div>
    <script src="~/js/CustomerJsFiles/ssign.js"></script>
</body>
</html>

