@page "/account/register/{actor?}"
@model RegisterModel
@{
    @if (Model.Actor.Equals("librarian"))
    {
        Layout = "/Pages/Shared/CustomerLayout.cshtml";
        ViewBag.Title = "librarian register";

    }
    else Layout = null;


}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/64d58efce2.js"
            crossorigin="anonymous"></script>

    <!--fontawesome link -->
    <script src="https://kit.fontawesome.com/70ea18d072.js" crossorigin="anonymous"></script>


    <link rel="shortcut icon " type="image/png" href="/image/Logo.png">


    <title>Register - Kitabi</title>
</head>
<body>
    @if (Model.Actor.Equals("librarian"))
    {
        <link rel="stylesheet" href="~/css/CustomerCssFiles/cformlib.css">
        <link rel="stylesheet" href="~/css/CustomerCssFiles/bootstrap.css">


        <div class="wrapper">
            <div class="title">
                REGISTRATION FORM
            </div>
            <div class="form">
                <div asp-validation-summary="All"style="color:red"></div>
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data" class="sign-in-form">

                    <div class="inputfield">
                        <label asp-for="Input.Email">Email Address</label>
                        <input type="text" asp-for="Input.Email" class="input">
                    </div>
                    <span class="text-danger" asp-validation-for="Input.Email" style="font-size: initial"></span>
                    <div class="inputfield">
                        <label asp-for="Input.Password">Password</label>
                        <input type="password" asp-for="Input.Password" class="input">
                    </div>
                    <span class="text-danger" asp-validation-for="Input.Password" style="font-size: initial"></span>

                    <div class="inputfield">
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <input type="password" class="input" asp-for="Input.ConfirmPassword">
                    </div>
                    <span class="text-danger" asp-validation-for="Input.ConfirmPassword" style="font-size: initial"></span>

                    <div class="inputfield">
                        <label asp-for="Input.UserName">Library Name</label>
                        <input type="text" class="input" asp-for="Input.UserName">
                    </div>
                    <span class="text-danger" asp-validation-for="Input.UserName" style="font-size: initial"></span>

                   
                    <div class="inputfield">
                        <label asp-for="Input.Address">Library Address</label>
                        <input type="text" class="input" asp-for="Input.Address">
                    </div>
                    <span class="text-danger" asp-validation-for="Input.Address" style="font-size: initial"></span>
                    <div class="inputfield">
                        <label asp-for="Input.Photo"></label>
                        <input asp-for="Input.Photo" class="form-control" type="file" />
                    </div>
                    <span class="text-danger" asp-validation-for="Input.Photo" style="font-size: initial"></span>

                    <div class="inputfield">
                        <input type="submit" value="Register" class="btn">
                    </div>
                </form>
            </div>
        </div>

    }
    else if (Model.Actor.Equals("customer"))
    {<link rel="stylesheet" href="~/css/CustomerCssFiles/csignup.css">

        <div class="container">
            <div class="forms-container">
                <div class="signin-signup">




                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data" class="sign-in-form">
                        <h2 class="title">Sign up</h2>

                        <div class="form-step form-step-active">

                            <h2> Step 1 : Account Setup </h2>

                            <div asp-validation-summary="All" style="color:red"></div>


                            <div class="input-field">
                                <i class="fas fa-envelope"></i>
                                <input type="email" placeholder="Email" asp-for="Input.Email" />
                            </div>
                            <span style="color:red" asp-validation-for="Input.Email"></span>
                            <div class="input-field">
                                <i class="fas fa-lock"></i>
                                <input type="password" placeholder="Password" asp-for="Input.Password" />
                            </div>
                            <span style="color:red" asp-validation-for="Input.Password"></span>

                            <div class="input-field">
                                <i class="fas fa-lock"></i>
                                <input type="password" placeholder="Confirm Password" asp-for="Input.ConfirmPassword" />
                            </div>
                            <span style="color:red" asp-validation-for="Input.ConfirmPassword"></span>


                            <div class="btns-group">
                                <a href="#" class="btn btn-next"> Next </a>
                            </div>



                        </div>


                        <div class="form-step ">

                            <h2> Step 2 : Personal Details </h2>

                            <div class="input-field">
                                <i class="fas fa-user"></i>
                                <input type="text" placeholder="Username" asp-for="Input.UserName" />
                            </div>
                            <span style="color:red" asp-validation-for="Input.UserName"></span>

                            <div class="input-field">
                                <i class="fas fa-user"></i>
                                <input type="text" placeholder="Address" asp-for="Input.Address" />
                            </div>
                            <span style="color:red" asp-validation-for="Input.Address"></span>





                            <div class="btns-group">
                                <a href="#" class="btn btn-prev"> previous </a>
                                <a href="#" class="btn btn-next"> Next </a>
                            </div>

                        </div>


                        <div class="form-step ">

                            <h2> Step 3 : Upload Your Photo </h2>



                            <div class="upload">
                                <div class="wrapper">
                                    <div class="imi">
                                        <img src="" alt="">
                                    </div>

                                    <div class="content">
                                        <div class="icon">
                                            <i class="fas fa-cloud-upload-alt"></i>

                                        </div>

                                        <div class="text">
                                            No file chosen, yet!
                                        </div>

                                    </div>
                                    <div id="cancel-btn">
                                        <i class="fas fa-times"></i>
                                    </div>

                                    <div class="file-name">
                                        File name here
                                    </div>

                                </div>
                                <label asp-for="Input.Photo" id="custom-btn"><i>Choose a file</i></label>
                                <input type="file" asp-for="Input.Photo" hidden>
                                @*<button onclick="defaultBtnActive()" asp-for="Input.Photo" id="custom-btn">Choose a file</button>
                                    <input id="default-btn" type="file" hidden >*@
                            </div>
                            <span style="color:red" asp-validation-for="Input.Photo"></span>


                            <div class="btns-group">
                                <a href="#" class="btn btn-prev"> previous </a>
                                <input type="submit" value="Next" class="btn btn-next" />

                            </div>


                        </div>









                    </form>








                </div>
            </div>

            <div class="panels-container">
                <div class="panel left-panel">
                    <div class="content">
                        <h3>One of us ?</h3>

                        <p>
                            If you are a member of our website, click on the sign in button.
                        </p>


                        <a href="Account/Login" class="btn transparent" id="sign-up-btn">Sign in</a>

                        <!-- <button class="btn transparent" id="sign-in-btn">
                          Sign in
                        </button> -->

                    </div>

                    <img src="image/register.svg" class="image" alt="" />
                </div>




            </div>
        </div>
        <script src="~/js/CustomerJsFiles/ssign.js"></script>
    }

</body>
</html>



<script src="~/assets/js/jquery/jquery-3.5.1.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
