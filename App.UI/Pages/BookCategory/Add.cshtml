@page
@model App.UI.Pages.BookCategory.AddModel
@{
    Layout = "/Pages/Shared/LibrarianLayout.cshtml";
    ViewBag.Title = "Add Book Category";
}
<div class="card">
    <div class="card-header">
        <h3>Add New Book Category</h3>
    </div>
    <div class="card-block">

        <form method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Book Category Name</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Categories.CategoryName" class="form-control">
                    <span class="text-danger" asp-validation-for="Categories.CategoryName"></span>
                </div>

            </div>

            <div class="text-right">
                <button class="btn btn-out-dashed waves-effect waves-light btn-primary btn-square" type="submit">Add Category</button>
            </div>
        </form>

    </div>
</div>

