@page
@model App.UI.Pages.BookCategory.ListModel
@{
    Layout = "/Pages/Shared/LibrarianLayout.cshtml";
    ViewBag.Title = "Book Category List";
}

<link href="~/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />

<link href="~/datatables/css/jquery.dataTables.css" rel="stylesheet" />
<div class="container">
    <br />
    <div>
        <table id="CategoriesDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Book Category</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>


        </table>
    </div>
</div>
@section scripts{

    <script src="~/datatables/js/jquery.dataTables.js"></script>
    <script src="~/datatables/js/dataTables.bootstrap4.js"></script>
    <script>
        $(document).ready(function () {
            $("#CategoriesDatatable").DataTable({

                "ajax": {
                    url: "?handler=displayCategories",
                    dataSrc:""
                },

                columns: [
                    {
                        title: 'Id',
                        data: 'id'
                    },
    
                    {
                        title: 'Book Category',
                        data: 'categoryName'
                    },
                    {
                        title: 'Edit',
                        data: 'id',
                        "render": function (data) { return '<a href="/BookCategory/Update/' + data + '" class="btn btn-success" >Edit</a>'; }
                    },

                    {
                        title: 'Delete',
                        data: 'id',
                        "render": function (data) { return '<a href="/BookCategory/Delete/' + data + '" class="btn btn-danger" >Delete</a>'; }
                    },
                ]

            });
        });
    </script>
}
