                    },
                    {
                        title: 'Photo',
                        data: 'photoPath',
                        render: function (data) {
                            return '<img src="' + data + '" style=width:100px;hight:100px/>'
                        }
                    },
                    
                   
                    {
                        title: 'Number Of Copies',
                        data: 'numberOfCopies'
                    },
                    {
                        title: 'Edit',
                        data: 'id',
                        "render": function (data) { return '<a href="/Books/Update/' + data + '" class="btn btn-success" >Edit</a>'; }
                    },
                   
                    {
                        title: 'Delete',
