@page
@model App.UI.Pages.Bookstores.IistModel
@{
}
@{
    Layout = "/Pages/Shared/AdminLayout.cshtml";
    ViewBag.Title = "Books List";

}

<link href="~/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />

<link href="~/datatables/css/jquery.dataTables.css" rel="stylesheet" />

<a href="/BookStores/Add" class="btn btn-primary font-weight-bold" id="button" style="margin-left:1200px !important">Add New BookStore</a>
<div class="container">
    <br />
    <div>
        <table id="customerDatatable" class="table table-striped table-bordered dt-responsive nowrap table-responsive" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>BookStore</th>
                    <th>Address</th>
                    <th>Domin</th>
                    <th>Logo</th>
                    <th>Database Connection String</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>


        </table>
    </div>
</div>
@section scripts{
    
    <script src="~/datatables/js/jquery.dataTables.js"></script>
    <script src="~/datatables/js/dataTables.bootstrap4.js"></script>
    <script>
        $(document).ready(function () {
            $("#customerDatatable").DataTable({
               
                "ajax": {
                    url: "?handler=displayBookStores",
                    dataSrc:""
                },
                
                columns: [
                   
                    {
                        title: 'name',
                        data: 'name'
                    },
                      {
                        title: 'Logo',
                        data: 'logo',
                        render: function (data) {
                            return '<img src="/Photos/librarian/' + data + '" style=width:100px;hight:100px/>'
                        }
                    },
                    {
                        title: 'Address',
                        data: 'address'
                    },
                    {
                        title: 'Domain',
                        data: 'domain'
                    },
                    {
                        title: 'Database Connection String',
                        data: 'connectionString'
                    },
                  
                     
                    
                    
                    {
                        title: 'Edit',
                        data: 'id',
                        "render": function (data) { return '<a href="/Bookstores/Edit/' + data + '" class="btn btn-success" >Edit</a>'; }
                    },
                   
                    {
                        title: 'Delete',
                        data: 'id',
                        "render": function (data) { return '<a href="/Bookstores/Delete/' + data + '" class="btn btn-danger" >Delete</a>'; }
                    },
                ]
              
            });
        });
    </script>
}