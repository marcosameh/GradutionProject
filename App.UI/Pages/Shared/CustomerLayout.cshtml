                    <a asp-page="/sections"> <i class="fas fa-arrow-right"></i> sections </a>
                    <a asp-page="/customer/authors"> <i class="fas fa-arrow-right"></i> authors </a>
                    <a href="#"> <i class="fas fa-arrow-right"></i> books </a>
