@page
@model App.UI.Pages.SignModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/64d58efce2.js"
            crossorigin="anonymous"></script>

    <!--fontawesome link -->
    <script src="https://kit.fontawesome.com/70ea18d072.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="/css/csign.css" />
    <title>Sign in & Sign up Form</title>
</head>
<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                <form action="#" class="sign-in-form">

                    <h2 class="title">Sign in</h2>

                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" placeholder="Username" />
                    </div>

                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" placeholder="Password" />
                    </div>

                    <input type="submit" value="Login" class="btn solid" />

                </form>


                <form action="#" class="sign-up-form">
                    <h2 class="title">Sign up</h2>

                    <div class="form-step form-step-active">

                        <h2> Step 1 : Account Setup </h2>


                        <div class="input-field">
                            <i class="fas fa-user"></i>
                            <input type="text" placeholder="Username" />
                        </div>

                        <div class="input-field">
                            <i class="fas fa-envelope"></i>
                            <input type="email" placeholder="Email" />
                        </div>

                        <div class="input-field">
                            <i class="fas fa-lock"></i>
                            <input type="password" placeholder="Password" />
                        </div>
                        <div class="upload">
                            <div class="wrapper">
                                <div class="imi">
                                    <img src="" alt="">
                                </div>

                                <div class="content">
                                    <div class="icon">
                                        <i class="fas fa-cloud-upload-alt"></i>
                                    </div>

                                    <div class="text">
                                        No file chosen, yet!
                                    </div>

                                </div>
                                <div id="cancel-btn">
                                    <i class="fas fa-times"></i>
                                </div>

                                <div class="file-name">
                                    File name here
                                </div>

                            </div>

                            <button onclick="defaultBtnActive()" id="custom-btn">Choose a file</button>
                            <input id="default-btn" type="file" hidden>
                        </div>
                        <div class="btns-group">
                            <a class="btn btn-next" id="submit"> Sign Up </a>
                        </div>



                    </div>












                </form>

            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>New here ?</h3>
                    <p>
                        In the event that you are not a member yet on our website, you can join us now,
                        click on sign up button and enter your data to enjoy our services.
                    </p>
                    <button class="btn transparent" id="sign-up-btn">
                        Sign up
                    </button>
                </div>
                <img src="/image/log.svg" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>One of us ?</h3>
                    <p>
                        If you are a member of our website, click on the sign in button.
                    </p>
                    <button class="btn transparent" id="sign-in-btn">
                        Sign in
                    </button>
                </div>
                <img src="/image/register.svg" class="image" alt="" />
            </div>
        </div>
    </div>

    <script src="/js/ssign.js"></script>
    <script src="~/jquery/jquery.min.js"></script>
    <script>

        $(document).ready(function () {

            $('#submit').click(function (evt) {
                
                evt.preventDefault();

            });


        });


    </script>
</body>
</html>

