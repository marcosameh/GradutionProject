@page
@model App.UI.Pages.author.DeleteModel
@{
    Layout = "/Pages/Shared/LibrarianLayout.cshtml";
    ViewBag.Title = "Delete Author";

}
<h2 class="text-center">Are You Want to Delete Author ?</h2>
<form  method="post" class="form-group">

    <label asp-for="Authors.Name">Author Name</label>
    <input type="text" asp-for="Authors.Name" disabled class="form-control" />
    <br /><br />

    <label asp-for="Authors.Bio">Author Biography</label>
    <textarea asp-for="Authors.Bio" disabled class="form-control" rows="4"></textarea>
    <br /><br />


    <label asp-for="Authors.NumberOfBooks">Number Of Books</label>
    <input type="text" asp-for="Authors.NumberOfBooks" disabled class="form-control" />
    <br /><br />

    <label asp-for="Authors.DisplayOrder">Display Order </label>
    <input type="text" asp-for="Authors.DisplayOrder" disabled class="form-control" />
    <br /><br />



     <label asp-for="Authors.PhotoPath">Book photo </label>
   <img src="@Model.Authors.PhotoPath"  />
    <br /><br />
     
    <input type="hidden" asp-for="Authors.Id" />   

 
    <center>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </center>

</form>

<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>



