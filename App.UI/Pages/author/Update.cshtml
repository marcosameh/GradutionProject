@page "{id:int:min(1)}"
@model App.UI.Pages.author.UpdateModel
@{
    Layout = "/Pages/Shared/LibrarianLayout.cshtml";
    ViewBag.Title = "Update Author";

}
<h2 class="text-center">Do You Want to Update Author ?</h2>
<div class="card">
    <div class="card-header">
        <h3>Update Author</h3>
    </div>
    <div class="card-block">
       
        <form method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Authors.Name" class="form-control">
                    <span class="text-danger" asp-validation-for="Authors.Name"></span>
                </div>

            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Biography</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Authors.Bio" class="form-control">
                    <span class="text-danger" asp-validation-for="Authors.Bio"></span>
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Number Of Books</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Authors.NumberOfBooks" class="form-control">
                    <span class="text-danger" asp-validation-for="Authors.NumberOfBooks"></span>
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Display Order</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Authors.DisplayOrder" class="form-control">
                    <span class="text-danger" asp-validation-for="Authors.DisplayOrder"></span>
                </div>

            </div>



            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Photo</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" asp-for="Authors.PhotoFile" id="uploadedfile">


                </div>

            </div>
          
            <input type="hidden" asp-for="Authors.Id" />

            <input type="hidden" asp-for="Authors.Photo" />

            <div class="text-right">
                <button class="btn btn-out-dashed waves-effect waves-light btn-primary btn-square" type="submit">Edit Author</button>
            </div>
        </form>

    </div>
</div>
<!-- Basic Form Inputs card end -->


