@page
@model App.UI.Pages.author.addModel
@{
    Layout = "/Pages/Shared/LibrarianLayout.cshtml";
    ViewBag.Title = "Add Author";
}


<!-- Basic Form Inputs card start -->
<div class="card">
    <div class="card-header">
        <h3>Add New Author</h3>
    </div>
    <div class="card-block">
       
        <form method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Author.Name" class="form-control">
                    <span class="text-danger" asp-validation-for="Author.Name"></span>
                </div>

            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Biography</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Author.Bio" class="form-control">
                    <span class="text-danger" asp-validation-for="Author.Bio"></span>
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Number Of Books</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Author.NumberOfBooks" class="form-control">
                    <span class="text-danger" asp-validation-for="Author.NumberOfBooks"></span>
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Display Order</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Author.DisplayOrder" class="form-control">
                    <span class="text-danger" asp-validation-for="Author.DisplayOrder"></span>
                </div>

            </div>



            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Photo</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" asp-for="Author.PhotoFile" id="uploadedfile">
                    <span class="text-danger" asp-validation-for="Author.PhotoFile"></span>
                </div>

            </div>

            <div class="text-right">
                <button class="btn btn-out-dashed waves-effect waves-light btn-primary btn-square" type="submit">Add Author</button>
            </div>
        </form>

    </div>
</div>
<!-- Basic Form Inputs card end -->

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        $(document).ready(function () {
            
            $('#uploadedfile').change(function () {
                if ($('#uploadedfile').val != null)
                {
                   
                    $("#photo").val("22203");
                }

            });

        });
    </script>
}

