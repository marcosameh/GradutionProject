@page "/authors/{PageIndex:int:min(1)?}"
@model App.UI.Pages.customer.AuthorsModel
@{
    ViewBag.Title = "Authors page";

    Layout = "/Pages/Shared/CustomerLayout.cshtml";
    var cauthorcss = "/css/CustomerCssFiles/cauthor.css";
}

<link href="@cauthorcss" rel="stylesheet" />

<div class="text-center">
    <h1 class="display-1">Search result</h1>
    <p class="display-6"></p>
</div>

<section id="team">
    <div class="container my-3 py-5 text-center">
        <div class="row">
            @foreach (var Author in Model.PagingAuthors)
            {
                <partial name="Partials/_AuthorCardPartial" model="Author" />
            }

        </div>
    </div>

</section>

  
    <partial name="_Pager" model="@Model.PagingAuthors.PagingData" />




